#include <iostream>
#include <vector>
using namespace std;

int main() {
    vector<int> v;
    int n, x, i = 0;
    cout<<"n= ";
    cin >>n;
 for (int i=0; i<n; i++) {
        cin>>x;
     if (x%2==0) {
         v.push_back(x/2);
     } else {
         v.push_back(2*x);
     }
    }
    for (int i =0; i<n; i++) {
        cout << v.at(i) << " ";
    }
    return 0;
}
